{% extends 'base.html.twig' %}

{% block body %}
    <h1>Body</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ body.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ body.name }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('body_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('body_edit', { 'id': body.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
