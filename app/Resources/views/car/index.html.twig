{% extends 'base.html.twig' %}

{% block body %}
    <h1>Auto Market Adverts</h1>
    {% for car in cars %}
        <div>
            <h3>{{ car.make }}</h3>
            <p>{{ car.model }}</p>
            <p>{{ car.body }}</p>
            <p>{% if car.year %}{{ car.year|date('Y-m-d') }}{% endif %}</p>
            <p>{{ car.createdBy.username }}</p>
            <p>{{ car.createdBy.email }}</p>
            <p><a href="{{ path('car_show', { 'id': car.id }) }}">Show details</a></p>
        </div>
    {% endfor %}
{% endblock %}
